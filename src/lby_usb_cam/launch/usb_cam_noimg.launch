<launch>
  <!-- USB摄像头节点 -->
  <!-- 修改 pkg 从 usb_cam 为 lby_usb_cam -->
  <node name="usb_cam" pkg="lby_usb_cam" type="lby_usb_cam_node" output="screen" >
    <!-- 摄像头设备路径，通常是 /dev/video0 -->
    <param name="video_device" value="/dev/video0" />
    <!-- 图像宽度和高度设置 -->
    <param name="image_width" value="640" />
    <param name="image_height" value="480" />
    <!-- 像素格式，yuyv 是常用的格式之一 -->
    <param name="pixel_format" value="yuyv" />
    <!-- 摄像头坐标系的名称 -->
    <param name="camera_frame_id" value="usb_cam" />
    <!-- 内存映射方式，用于图像数据传输 -->
    <param name="io_method" value="mmap"/>
    <!-- 摄像头标定参数文件路径，修改为使用 lby_usb_cam 包 -->
    <param name="camera_info_url" type="string" value="file://$(find lby_usb_cam)/launch/head_camera.yaml" />
    <!--帧率设置为30hz-->
    <param name="framerate" value="30" />
  </node>

</launch>